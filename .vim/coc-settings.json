{
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "vue", "json", "html", "javascript", "typescript", "python", "php", "go", "xml", "wxml", "wxss", "json"],
  "coc.preferences.formatOnTypeFiletypes": ["css", "markdown", "vue", "json", "html", "javascript", "typescript", "python", "php", "go", "xml", "wxml", "wxss", "json"],

  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.semi": false,
  "prettier.singleAttributePerLine": false,
  "prettier.arrowParens": "avoid",
  "prettier.bracketSameLine": true,
  "prettier.printWidth": 1000,
  "prettier.useEditorConfig": false,
  "xml.java.home": "/usr/lib/jvm/java-11-openjdk-amd64",

  "languageserver": {
    "arduino": {
      "command": "/usr/local/bin/arduino-language-server",
      "rootPatterns": ["*.ino"],
      "filetypes": ["arduino"],
      "args": ["-cli", "/usr/local/bin/arduino-cli", "-clangd", "/usr/bin/clangd", "-cli-config", "$HOME/.arduino15/arduino-cli.yaml"]
    }
  },
  "suggest.noselect": false,

  "snippets.ultisnips.directories": ["~/.vim/plugged/vim-go/gosnippets/UltiSnips"],
  "snippets.ultisnips.pythonPrompt": false
}
